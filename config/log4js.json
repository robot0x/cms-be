{
    "appenders":
        [
            {
                "type":"console",
                "category":"console"
            },
            {
                "category":"cms_http",
                "type": "file",
                "filename": "./logs/http.log",
                "maxLogSize": 104800,
                "backups": 100,
                "layout": {
                  "type": "pattern",
                  "pattern": "[%d{DATE}] %m"
                }
            },
            {
                "category":"cms_var",
                "type": "dateFile",
                "filename": "./logs/cms_var/cms_var",
                "alwaysIncludePattern": true,
                "pattern": ".log.yyyy-MM-dd"
            },
            {
                "category":"cms_run",
                "type": "dateFile",
                "filename": "./logs/cms_run/cms_run",
                "alwaysIncludePattern": true,
                "pattern": ".log.yyyy-MM-dd"
            }
        ],
    "replaceConsole": true,
    "levels":
    {
        "cms_var":"ALL",
        "cms_run":"ALL",
        "cms_http":"ALL",
        "console":"ALL"
    }
}
